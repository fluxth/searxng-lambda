{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    ":maintainLockFilesMonthly",
    ":pinVersions"
  ],
  "git-submodules": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "reviewers": ["fluxth"],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 7pm every weekday",
    "before 7am every weekday",
    "every weekend"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "searxng/**"
  ],
  "packageRules": [
    {
      "matchManagers": ["docker-compose"],
      "matchPackageNames": ["searxng-lambda"],
      "enabled": false
    }
  ]
}
