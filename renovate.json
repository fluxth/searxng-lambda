{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:pinDigests"
  ],
  "git-submodules": {
    "enabled": true
  },
  "reviewers": ["fluxth"],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 9pm every weekday",
    "before 2am every weekday",
    "every weekend"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "searxng/**"
  ]
}
